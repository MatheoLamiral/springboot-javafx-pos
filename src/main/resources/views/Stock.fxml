<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cgelectrosound.gestion.controllers.StockController">

    <top>
        <fx:include source="Header.fxml" />
    </top>

    <center>
        <VBox spacing="20.0" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label text="Gestión de Stock">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>

                        <TextField fx:id="txtBuscar" prefWidth="300.0" promptText="Buscar por nombre, código..." />

                        <Region HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnNuevaCompra" mnemonicParsing="false" onAction="#nuevaCompra" styleClass="boton-naranja" text="+ Nuevo Producto">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <effect>
                                <DropShadow color="#00000040" />
                            </effect>
                        </Button>
                    </children>
                </HBox>

                <TableView fx:id="tblProductos" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" maxWidth="80.0" minWidth="50.0" text="ID" />
                        <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre del Producto" />
                        <TableColumn fx:id="colDescripcion" prefWidth="300.0" text="Descripción" />
                        <TableColumn fx:id="colStock" prefWidth="100.0" text="Stock" />
                        <TableColumn fx:id="colPrecioLista" prefWidth="120.0" text="Precio Lista" />
                        <TableColumn fx:id="colPrecioVenta" prefWidth="120.0" text="Precio Venta" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editarProducto" styleClass="boton-oscuro" text="Editar Seleccionado" />
                        <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminarProducto" styleClass="boton-peligro" text="Eliminar" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>