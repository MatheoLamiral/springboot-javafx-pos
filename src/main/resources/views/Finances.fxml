<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cgelectrosound.gestion.controllers.FinancesController">

    <top>
        <fx:include source="Header.fxml" />
    </top>

    <center>
        <VBox spacing="30.0" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label text="Reporte Financiero">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                    <effect>
                        <DropShadow color="#00000020" />
                    </effect>
                    <children>
                        <VBox spacing="5.0">
                            <Label text="Desde:" textFill="#666666" />
                            <DatePicker fx:id="dpDesde" prefHeight="35.0" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Hasta:" textFill="#666666" />
                            <DatePicker fx:id="dpHasta" prefHeight="35.0" />
                        </VBox>

                        <Button mnemonicParsing="false" onAction="#filtrarPorFechas" styleClass="boton-naranja" text="Generar Reporte">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>

                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS" spacing="15.0">
                            <Button mnemonicParsing="false" onAction="#verUltimaSemana" styleClass="boton-oscuro" text="Última Semana" />
                            <Button mnemonicParsing="false" onAction="#verUltimoMes" styleClass="boton-oscuro" text="Último Mes" />
                        </HBox>
                    </children>
                </HBox>

                <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <effect>
                                <DropShadow color="#00000015" />
                            </effect>
                            <children>
                                <Label text="INGRESOS TOTALES" textFill="#666666">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblIngresos" text="\$ 0.00" textFill="#2a9d8f">
                                    <font>
                                        <Font name="System Bold" size="48.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <effect>
                                <DropShadow color="#00000015" />
                            </effect>
                            <children>
                                <Label text="GASTOS TOTALES" textFill="#666666">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblGastos" text="\$ 0.00" textFill="#e63946">
                                    <font>
                                        <Font name="System Bold" size="48.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: fb8500; -fx-border-width: 2; -fx-border-radius: 10;" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <effect>
                                <DropShadow color="#00000015" />
                            </effect>
                            <children>
                                <Label text="GANANCIA NETA" textFill="#fb8500">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblGanancia" text="\$ 0.00">
                                    <font>
                                        <Font name="System Bold" size="52.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>